<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/dashboard.css">
  <title>Welcome to iCars services</title>
</head>

<%- include ("components/navbar.ejs") %>

  <body class="db-body">
    <div class="sections">
      <section class="section1">
        <h1 class="wlcome">
          <span style="color: white;">Hi</span><img src="/images/waving-hand.png" class="wlcm-hand">, Welcome
        </h1>

        <div class="buttons">
          <a type="button" href=<%- ("registerVehicle") %> class="btn btn-primary vehicleBtn"> Register your Vehicle</a>
          <a type="button" href=<%- ("take-appointment") %> class="btn btn-danger appointmentBtn">Take an Appointment</a>
          <a type="button" href=<%- ("feedback") %> class="btn btn-warning feedbackBtn" style="color: white;">Write a feedback</a>
        </div>
        <div class="buttons">
          <a type="button"  class="btn btn-primary vehicleBtn" style="color: white;">View your Appointment Status</a>
          <a type="button" href=<%- ("updateProfile") %> class="btn btn-warning feedbackBtn" style="color: white;">Update Your Profile</a>
        </div>
      </section>

      <section class="section2">
       
        <div class="user_image_d">
          <img class="user-image" src="/images/dashboard/user.png">
        </div>

        <div class="name_of_user">
          <%=userdata[0].name %> 
        </div>

        <div class="phone-details" style="display: flex;">
          <a target="__blank" href="https://play.google.com/store/apps/details?id=com.simpler.dialer&hl=en_IN&gl=US">
            <!-- <img src="./images/dashboard/phone-call.png" class="phone-call-img" alt="">  -->
            <i class="fas fa-phone-alt fa-2x phone-call-img"></i>
          </a>
          <div class="phone-number"><%= userdata[0].mobile %> </div>
        </div>

        <div class="phone-details emails" style="display: flex;">
          <a target="__blank" href="https://gmail.com"><i class="fas fa-envelope fa-2x phone-call-img"></i></a>
          <div class="phone-number"><%=userdata[0].email %> </div>
        </div>


        <div class="address phone-details" address style="display: flex;">
          <a target="__blank" href="https://www.google.com/maps"> 
            <!-- <img src="./images/dashboard/house.png" class="phone-call-img" alt=""> </a> -->
            <i class="fas fa-home fa-2x phone-call-img"></i> </a>
          <div class="phone-number"><%=userdata[0].street %> <%=userdata[0].city %> <%=userdata[0].state %> </div>
        </div>
       
      </section>
    </div>

  </body>
  <script>

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
    crossorigin="anonymous"></script>

</html>