<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Employee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="/css/operationDelete.css" />
    <style> 
        .myAlert-top{
          position: fixed;
          top: 5px; 
          left:37%;
          width: 26%;
          z-index: 10000000;
      }
      
      .myAlert-bottom{
          position: fixed;
          top: 5px;
          left:37%;
          width: 26%;
          z-index: 10000000;
      }
      
      .alert-hid{
         display:none !important;
      }
     </style>
</head>
<%- include ("./components/navbar1.ejs") %>
<body class="UR-body">
    <% if(error && error.length){ %> 
        <div id="db-body" class="alert alert-danger d-flex flex-row justify-content-between align-items-center myAlert-bottom">
          <div class="d-flex flex-row justify-content-between align-items-center">
            <i class="fas fa-check-square" style="color:white;margin-right: 10px;"></i>
            <%= error %>
          </div>
          <a href="#" class="close mb-1" data-dismiss="alert" aria-label="close" onclick="myAlert()"><i class="fas fa-times" style="color:white;"></i></a>
        </div>
        <% }else if(success.length){ %>
          <div id="db-body" class="alert alert-success d-flex flex-row justify-content-between align-items-center myAlert-bottom">
            <div class="d-flex flex-row justify-content-between align-items-center">
              <i class="fas fa-check-square" style="color:white;margin-right: 10px;"></i>
              <%= success %>
            </div>
            <a href="#" class="close mb-1" data-dismiss="alert" aria-label="close" onclick="myAlert()"><i class="fas fa-times" style="color:white;"></i></a>
          </div>
          <% } %>
        
    <header>
        <h2>Delete Employee</h2>
    </header>
      <div class="container" style="display:flex;">
         <div class="delete-form" style="margin: auto;">
        <form class="UR-form" action="/admin/deleteEmployee" method="POST">
            <div class="mb-3 urf-named">
                <input name="id" type="text" required class="form-control urf-namei" id="formGroupExampleInput" placeholder="Employee ID">
             </div>
             <div class="mb-3 urf-named">
                <input name="email" type="email" required class="form-control urf-namei" id="formGroupExampleInput" placeholder="Employee Email">
             </div>
            <button type="submit" class="btn btn-primary signupBtn" id='deleteBtn'>Delete</button>
        </form>
       </div>
   
    </div>
    
</body>
 <!-- Option 1: Bootstrap Bundle with Popper -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
 <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
 <script> 
  var aler =document.getElementById('db-body')
    function myAlert(){
      console.log("Closed");
      aler.className+=' alert-hid';
    }
    setTimeout(function(){
      aler.className+=' alert-hid';
    }, 3000)
</script>
</html>