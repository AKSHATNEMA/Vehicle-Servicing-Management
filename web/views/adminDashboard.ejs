<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/adminDashboard.css">
  <title>Welcome to iCars services</title>
  <style> 
    .myAlert-top{
      position: fixed;
      top: 5px; 
      left:37%;
      width: 26%;
      z-index: 10000000;
  }
  
  .myAlert-bottom{
      position: fixed;
      top: 5px;
      left:37%;
      width: 26%;
      z-index: 10000000;
  }
  
  .alert-hid{
     display:none !important;
  }
    </style>
</head>

<%- include ("./components/navbar1.ejs") %>

  <body class="db-body">
    <% if(error && error.length){ %> 
      <div id="db-body" class="alert alert-danger d-flex flex-row justify-content-between align-items-center myAlert-bottom">
        <div class="d-flex flex-row justify-content-between align-items-center">
          <i class="far fa-times-circle" style="color:black;margin-right: 10px;"></i>
          <%= error %>
        </div>
        <a href="#" class="close mb-1" data-dismiss="alert" aria-label="close" onclick="myAlert()"><i class="fas fa-times" style="color:black;"></i></a>
      </div>
      <% }else if(success.length){ %>
        <div id="db-body" class="alert alert-success d-flex flex-row justify-content-between align-items-center myAlert-bottom">
          <div class="d-flex flex-row justify-content-between align-items-center">
            <i class="fas fa-check-square" style="color:black;margin-right: 10px;"></i>
            <%= success %>
          </div>
          <a href="#" class="close mb-1" data-dismiss="alert" aria-label="close" onclick="myAlert()"><i class="fas fa-times" style="color:black;"></i></a>
        </div>
        <% } %>
        
    <div class="sections">
      <section class="section1">
        <div style="margin-top: 200px;">
        <h1 class="wlcome"> Welcome Admin!</h1>
        </div>
      </section>

      <section class="section2">
      
        <div style="margin-top: 6.25rem;">
        <h5 class="buttonsHeading">Employee Section:</h5>
        <div class="tableStyles">
        <table>
            <tr>
                <div class="buttons">
                    <a type="button" class="btn btn-primary viewEmployeeBtn" href=<%- ("/admin/employeeView") %>>View Employee details</a>
                    <a type="button" class="btn btn-danger addEmployeeBtn" href=<%- ("/admin/addUpdateEmployee") %>>Add/Update Employee info</a>
                    <a type="button" class="btn btn-warning deleteEmployeeBtn" style="color: white;" href=<%- ("/admin/deleteEmployee") %>>Delete Employee</a>
                </div>
            </tr>
        </table>
        </div>
        </div>
        <hr style="color: white">
        <div>
        <h5 class="buttonsHeading">Customer Section:</h5>
        <div class="tableStyles">
        <table>
            <tr>
                <div class="buttons">
                    <a type="button" class="btn btn-primary viewEmployeeBtn" href=<%- ("/admin/customerView") %>>View Customer Details</a>
                    <a type="button" class="btn btn-danger addEmployeeBtn" href=<%- ("/admin/addUpdateCustomer") %>>Add/Update Customer info</a>
                    <a type="button" class="btn btn-warning deleteEmployeeBtn" style="color: white;" href=<%- ("/admin/deleteCustomer") %>>Delete Customer</a>
                  </div>
            </tr>
        </table>
        </div>
        </div>
        <hr style="color: white;">
        <div>
        <h5 class="buttonsHeading">Manage Appointments:</h5>
        <div class="tableStyles">
        <table>
            <tr>
                <div class="buttons">
                    <a type="button" class="btn btn-danger addEmployeeBtn">View Appointments</a>
                    <a type="button" class="btn btn-warning deleteEmployeeBtn" style="color: white;">Assign Appointments</a>
            </tr>
        </table>
        <h5 class="buttonsHeading">Feedback Management:</h5>
        <div class="tableStyles">
        <table>
            <tr>
                <div class="buttons">
                    <center><a type="button" class="btn btn-primary addEmployeeBtn" href=<%- ("feedbackView") %>>View Feedbacks</a></center>
                </div>
            </tr>
        </table>
        </div>
        </div>
      </section>
    </div>

  </body>
  <script>

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
    crossorigin="anonymous"></script>
    <script>
      var aler =document.getElementById('db-body')
      function myAlert(){
        console.log("Closed");
        aler.className+=' alert-hid';
      }
      setTimeout(function(){
        aler.className+=' alert-hid';
      }, 3000)
    </script>
</html>